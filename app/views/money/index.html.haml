.money
  %h3= breadcrumbs
  .pull-right
    = link_to refresh_rates_money_index_path, method: :post, class: "btn has-tip", title: "Refresh" do
      %span.glyphicon.glyphicon-refresh

  .money.window
    = paginate @exchanges

    %table.table.table-striped
      %thead
        %th.span2= "ID"
        %th.span5= "Name"
        %th.span5= "Created at"
      %tbody
        - @exchanges.each do |exchange|
          %tr
            %td= exchange.id
            %td= link_to exchange.name, money_path(exchange)
            %td= localize exchange.created_at, format: :long

    = paginate @exchanges